{
    "black-formatter.args": [
        "--line-length", "88",
    ],
    "flake8.args": [
        "--max-line-length", "88",
        "--extend-ignore", "E203"
    ],
    "[python]": {
        "editor.formatOnSave": true,
    },
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
}