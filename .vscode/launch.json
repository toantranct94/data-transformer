    "version": "0.2.0",
    "configurations": [
        {
            "name": "API",
            "type": "debugpy",
            "module": "uvicorn",
            "request": "launch",
            "args": ["main:app", "--port", "8000", "--reload"],
            "console": "internalConsole",
            "justMyCode": false,
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
          },
    ]
}